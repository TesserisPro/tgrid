<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="TypeScript, Angular and Knockout compatile, fully customizable grid. TGrid can work on any* device and any screeen resolution. It dynamically adjust content for sdcreen and even change the layout. TGrid grid supports any (really any) number of rows that can be loaded dynamically when user scroll or select page." />
    <meta name="keywords" content="HTML5 grid, grid, web grid" />
    <meta itemprop="name" content="TGrid by Tesseris Pro">

    <link rel="shortcut icon" href="/favicon.ico?v=1.1" />
    
    <title>@ViewBag.Title</title>
    
    <script src="@Url.Content("~/Scripts/jquery-2.0.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-3.0.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/init.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel='stylesheet' />
    
</head>
<body>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-47469213-1', 'tesseris.com');
        ga('send', 'pageview');
    </script>

    <script type="text/javascript">
        window.onerror = function (msg, url, line) {
            alert("Error: " + msg + "\n\nFile: " + url + "\n\nLine: " + line);
            return false;
        };
    </script>

    <div>
        <div id="tgrid-navi">
            <div id="tgrid-bar">
                <div class="inner">
                    <a id="tgrid-log" href="@Url.Content("~/Home")">
                        <img src="@Url.Content("~/Content/images/tgridSNS.png")" />
                    </a>
                    <a id="tgrid-logo" href="http://www.tesseris.com/" style="position: absolute; left: 868px;">
                        <img src="@Url.Content("~/Content/images/tesseris.png")" />
                    </a>
                </div>
            </div>

            <div id="wrapper" style="background: url(@Url.Content("~/Content/images/gears5.png"))">

                <header>
                    @RenderSection("featured", required: false)
                </header>

                <div id="content" class="content">
                    @RenderBody()
                </div>
    
                <footer>
                    <div class="centered-content">
                        (c) 2014 - Tesseris Pro LLC
                    </div>
                </footer>
            </div>

        </div>

    </div>
</body>
</html>
