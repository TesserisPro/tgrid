    <div>
        <div id="tgrid-navi">
            <div id="tgrid-bar">
            <div id="header-top">
                <div class="wrapper clearfix">
                    <div class="l-color-wrapper">
                        <div class="l-color">
                            <div class="l-color-outside"></div>
                            <div class="l-color-triangle"></div>
                        </div>
                        <div class="l-color-wrapper-triangle"></div>
                    </div>
                </div>
            </div>
            <div id="header-middle">
                <div class="wrapper clearfix">
                    <div class="l-color-wrapper">
                        <div class="l-color">
                            <div class="l-color-outside"></div>
                            <div class="l-color-triangle"></div>
                        </div>
                        <div class="l-color-wrapper-triangle"></div>
                    </div>                    
                    <div class="logo-image innerImg pull-left">
                        <a id="tgrid-log" href="@Url.Content("~/Home")">
                            <img class="gridName" src="@Url.Content("~/Content/images/tgrid.png")" />
                        </a>
                    </div>
                    <h1 class="pull-right">Fast grid for desktop and mobile designed for HTML5</h1>
                   
                </div>
            </div>
            <div id="header-bottom">
                <div class="wrapper clearfix">
                    <div class="l-color-wrapper">
                        <div class="l-color">
                            <div class="l-color-outside"></div>
                            <div class="l-color-triangle"></div>
                        </div>
                        <div class="l-color-wrapper-triangle"></div>

                    </div>
                    <div class="widget top-widget clearfix">
                        <div class="logo-image inner">
                        <a id="tgrid-logo2" href="http://www.tesseris.com/">
                            <img src="@Url.Content("~/Content/images/tesseris.png")" />
                        </a>
                    </div>                       
                        <p class="descriptionText">TypeScript, Angular and Knockout compatible, fully customizable grid. TGrid can work on any device and any screen resolution. TGrid grid supports any number of rows that can be loaded dynamically when user scrolls or selects page.</p>                        
                        <ul id="main-menu" class="buttons ">
                            <li class="dropdown-toggle">
                                <a href="~/Home">Home</a>
                            </li>
                            <li class="dropdown-toggle">
                                <a class="dropdown-a" data-toggle="dropdown">Demo
                            <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li>@Html.ActionLink("Knockout", "DemoKnockout", null, new { @class = "has-child" })</li>
                                    <li>@Html.ActionLink("Angular", "DemoAngular", null, new { @class = "has-child" })</li>
                                </ul>
                            </li>
                            <li class="dropdown-toggle">
                                <a class="dropdown-a" data-toggle="dropdown">Documentation
                            <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="~/Home/Documentation#!/General/general">General</a></li>
                                    <li><a href="~/Home/Documentation#!/GridSettings/general_settings">Grid settings</a></li>
                                    <li><a href="~/Home/Documentation#!/ColumnsDefinitions/columns_general">Columns Definition</a></li>
                                    <li><a href="~/Home/Documentation#!/Options/general_options">Options</a></li>
                                </ul>
                            </li>     
                            <li>@Html.ActionLink("Download", "Download", null, new { @class = "downloadMain" })</li>
                            <li><a href="https://github.com/TesserisPro/tgrid/issues">Report an issue</a></li>
                        </ul>                       
                    </div>
                </div>
                </div>
            </div>


            <div id="wrapper" style="background: url(@Url.Content("~/Content/images/gears5.png"))">

                <header>
                    @RenderSection("featured", required: false)
                </header>

                <div style="background-color: rgba(192,192,192,0.05); width:100%; height:100%;">
                    <div id="content" class="content">
                            @RenderBody()
                       
                    </div>
                </div>

                <footer>
                    <div class="centered-content">
                        (c) 2014 - Tesseris Pro LLC
                    </div>
                </footer>
            </div>

        </div>

