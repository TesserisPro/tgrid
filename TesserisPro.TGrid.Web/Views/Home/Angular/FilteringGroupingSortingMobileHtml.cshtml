<!-- Start the highlighter. -->

<pre class="brush: html">
    <div ng-app="SampleModule"> 
            <div ng-controller="ctrl">
                <t-grid id="test-angular" provider="dataProvider" enablefiltering ="true" enablegrouping="true" enablesorting ="true">
                    <script type="text/html">
                        <column data-g-member ="Name" data-g-filter-member ="Name" data-g-group-member ="Name" data-g-sort-member ="Name">
                        </column>
                        <column data-g-member ="Surname" data-g-filter-member ="Surname" data-g-group-member ="Surname" data-g-sort-member ="Surname">
                        </column>
                        <column data-g-member ="Age" data-g-filter-member ="Age"  data-g-group-member ="Age"  data-g-sort-member ="Age">
                        </column>
                        <filterpopup>
                            <div class="filterHeader">
                                <span>{{path}}</span><div class="closeConteiner" ng-click="onClose()"></div>
                            </div>
                            <select ng-model ="condition" ng-options="condition.value as condition.name for condition in availableConditions" class="grid-filter-popup-options">                           
                            </select>
                            <input type="text" ng-model="value"><br>
                            <label class="grid-filter-popup-casesens-label">
                                <input type="checkbox" ng-model="caseSensitive" class="grid-filter-popup-casesens" />Case sensitive
                            </label>
                            <div class="tgrid-filter-popup-buttons-container">
                                <div class="tgrid-filter-popup-button" style="width:70px" ng-click="onApply()">Filter</div>
                                <div class="tgrid-filter-popup-button" style="width:70px" ng-click="onClear()">Clear</div>
                            </div>
                        </filterpopup>
                    </script>
                </t-grid>
            </div>
        </div>
</pre>

<script type="text/javascript">
    SyntaxHighlighter.highlight();
</script>
