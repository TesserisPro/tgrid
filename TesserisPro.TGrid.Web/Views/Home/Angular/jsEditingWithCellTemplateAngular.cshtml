    var items = [
        { CompanyId: "1", Country: "Great Britain", City: "Boston", Street: "Cottage St", detail_Company: "Company name: Flowers Delivery", detail: "Address: Great Britain, Boston, Cottage St" }
        //... add your items here
    ];

    var TGrid = angular.module('TGrid', [])
        .controller("ctrl", function ctrl($scope) {
            $scope.dataProvider = new TesserisPro.TGrid.ArrayItemsProvider(items);
            $scope.editingItem = null;
            $scope.valueForEditing = null;
            $scope.valueForSaving = null;
            $scope.colName = null;
            $scope.toggleActive = function (item, colValue, colName) {
                $scope.valueForEditing = colValue;
                $scope.valueForSaving = item;
                $scope.editingItem = colValue;
                $scope.colName = colName;
            }
            $scope.getValueForSaving = function (colName) {
                $scope.editingItem = null;
                $scope.valueForSaving[$scope.colName] = $scope.valueForEditing;
                return $scope.valueForSaving;
            }
        })
        .directive('tGrid', TGrid.Angular.Directive);

