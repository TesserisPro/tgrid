        <script src="~/Scripts/iframe/tgrid-angular-min.js" type="text/javascript"></script>
    </head>
    <body> 
        <div ng-app="SampleModule"> 
            <div ng-controller="ctrl">
                <t-grid id="test-angular" provider="dataProvider" enablevirtualscroll="true" enablegrouping="true" >
                     <script type="text/html">
                         <column data-g-member="Name" data-g-group-member="Name">
